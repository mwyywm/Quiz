generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "postgresql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Quiz {
  id          Int        @id @default(autoincrement())
  title       String     @unique
  slug        String     @unique
  description String
  questions   Question[]
  results     Result[]
}

model Question {
  id            Int      @id @default(autoincrement())
  quiz          Quiz     @relation(fields: [quizId], references: [id])
  quizId        Int
  question      String   
  correctAnswer String
  answers       String[]
}

model Result {
  id          Int      @id @default(autoincrement())
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  quizId      Int
  score       Int
  correct     Int
  total       Int
}

