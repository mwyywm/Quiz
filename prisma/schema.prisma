generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Quiz {
  id          Int        @id @default(autoincrement())
  title       String     @unique
  description String
  questions   Question[]
}

model Question {
  id            Int      @id @default(autoincrement())
  quiz          Quiz     @relation(fields: [quizId], references: [id])
  quizId        Int
  question      String   @unique
  answers       answer[]
  correctAnswer String
}

model answer {
  id         Int      @id @default(autoincrement())
  question   Question @relation(fields: [quizId], references: [id])
  quizId Int
  answer     String
}
